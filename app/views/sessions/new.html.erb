<div class="form-space">
  <h3 class="title">ログイン</h3>
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-box">
          <label class="form-label">メールアドレス(半角英数字)</label>
          <%= f.email_field :email, {class: 'form'} %>
        </div>
        <div class="form-box">
          <label class="form-label">パスワード</label>
          <%= f.password_field :password, {class: 'form'} %>
        </div>
        <%= f.submit 'ログイン', {class: 'button'} %>
    <% end %>
  <%= link_to '新規ユーザー登録はこちら', new_user_path %>
</div>